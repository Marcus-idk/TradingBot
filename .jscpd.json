{
  "threshold": 0,
  "reporters": [
    "json"
  ],
  "ignore": [
    "**/__pycache__/**",
    "**/.pytest_cache/**",
    "**/pytest_cache/**",
    "**/.mypy_cache/**",
    "**/.ruff_cache/**",
    "**/.hypothesis/**",
    "**/.venv/**",
    "**/.claude/**",
    "**/*.pyc",
    "**/*.pyo",
    "**/.vscode/**",
    "**/.coverage",
    "**/.coverage.*",
    "**/htmlcov/**",
    "**/docs/**",
    "**/build/**",
    "**/dist/**",
    "**/*.egg-info/**",
    "**/tempfiles/**"
  ],
  "minLines": 5,
  "minTokens": 30,
  "format": [
    "python"
  ]
}